<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:orientation="horizontal"
    android:padding="16dp"
    android:useDefaultMargins="true"
    android:columnCount="1" >

    <TextView
        android:id="@+id/from_label"
        android:layout_gravity="fill_horizontal"
        android:text="Desde"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/desdeComp" />

    <EditText
        android:id="@+id/desdeComp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:completionThreshold="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:hint="Dirección de origen. Ej: San Martin 312" />

    <TextView
        android:id="@+id/to_label"
        android:layout_gravity="fill_horizontal"
        android:text="Hasta"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desdeComp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/hastaComp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:completionThreshold="3"
        android:layout_below="@+id/to_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Dirección de destino. Ej: Universidad Nacional de Río Cuarto" />

    <Button
        android:id="@+id/load_directions"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:text="Cargar Direcciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hastaComp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="BuscarCalles" />

</RelativeLayout>